<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Latar belakang bulat abu muda -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#F2F2F2" /> <!-- abu lembut -->
            <stroke android:width="1dp" android:color="#BDBDBD" />
            <size android:width="24dp" android:height="24dp" />
        </shape>
    </item>

    <!-- Garis horizontal -->
    <item
        android:left="6dp"
        android:right="6dp"
        android:top="11dp"
        android:bottom="11dp">
        <shape android:shape="rectangle">
            <solid android:color="#0F9E99" />
            <size android:width="12dp" android:height="2dp" />
        </shape>
    </item>

    <!-- Garis vertikal -->
    <item
        android:left="6dp"
        android:right="6dp"
        android:top="11dp"
        android:bottom="11dp">
        <rotate
            android:fromDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#0F9E99" />
                <size android:width="12dp" android:height="2dp" />
            </shape>
        </rotate>
    </item>

</layer-list>
