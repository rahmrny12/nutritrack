<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- IMAGE (optional) -->
    <ImageView
        android:id="@+id/imgMeal"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_image"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_food_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- MEAL NAME -->
    <TextView
        android:id="@+id/mealName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Meal name"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgMeal"
        app:layout_constraintTop_toTopOf="@id/imgMeal" />

    <View
        android:id="@+id/lineDivider"
        android:layout_width="2dp"
        android:layout_height="32dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="@+id/mealName"
        app:layout_constraintTop_toTopOf="@+id/linearLayout3" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/lineDivider"
        app:layout_constraintTop_toBottomOf="@+id/mealName">
        <!-- NUTRITION SUBTITLE -->
        <TextView
            android:id="@+id/mealNutrition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Carbs 0g • Protein 0g • Fat 0g"
            android:textColor="#777"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@id/mealName"
            app:layout_constraintStart_toStartOf="@id/mealName"
            app:layout_constraintTop_toBottomOf="@id/mealName" />
        <!-- CALORIES (LIKE PRICE) -->
        <TextView
            android:id="@+id/mealCalories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="230 kcal"
            android:textColor="#777"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/imgMeal"
            app:layout_constraintStart_toStartOf="@id/mealName"
            app:layout_constraintTop_toBottomOf="@id/mealNutrition" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
