<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="@drawable/stroke_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <!-- LEFT SIDE (TITLE + SUBTITLE) -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mealTitle"
            android:text="Meal Name"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/mealSubtitle"
            android:text="200 cal"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- ADD BUTTON -->
    <ImageButton
        android:id="@+id/btnAddMeal"
        android:src="@drawable/baseline_add_24"
        android:background="@android:color/transparent"
        android:padding="6dp"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:contentDescription="Add Meal"
        app:tint="@color/teal_700" android:layout_marginHorizontal="4dp"/>

</LinearLayout>
