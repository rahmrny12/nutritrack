    android:layout_height="match_parent"
    tools:context=".ui.log_food.LogFoodFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

