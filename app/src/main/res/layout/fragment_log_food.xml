<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.log_food.LogFoodFragment">

    <!-- ==================== MAIN CONTENT ==================== -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- SearchBox -->
        <EditText
            android:id="@+id/searchview"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/searchbox"
            android:hint="@string/txt_search_food"
            android:imeOptions="actionSearch"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:singleLine="true"/>

        <!-- Tabs -->
        <LinearLayout
            android:id="@+id/categoryTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/tabAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="6dp">

                <TextView
                    android:id="@+id/tvAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_tab_all"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <View
                    android:id="@+id/indicatorAll"
                    android:layout_width="55dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="9dp"
                    android:background="#0F9E99"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tabMyMeals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="6dp">

                <TextView
                    android:id="@+id/tvMyMeals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_tab_meals"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <View
                    android:id="@+id/indicatorMyMeals"
                    android:layout_width="55dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="9dp"
                    android:background="#D3D3D3"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/topButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@drawable/bg_btn_meal">

            <!-- 2 Buttons: Scan & Create -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/btnScanMeal"
                    android:layout_width="140dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/btn_scanmeal"
                    android:gravity="center"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/btnCreateMeal"
                    android:layout_width="137dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/btn_createmeal"
                    android:gravity="center"
                    android:orientation="horizontal" />
            </LinearLayout>

            <!-- ðŸ”µ NEW: Daily Logged Item Count -->
            <TextView
                android:id="@+id/tvDailyCount"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="@string/action_today_logged_meal"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#0F9E99"
                android:background="@drawable/bg_daily_count"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Fragment container MUST use weight -->
        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="48dp"/>

    </LinearLayout>
</FrameLayout>
