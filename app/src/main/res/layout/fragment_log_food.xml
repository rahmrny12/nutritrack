<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.log_food.LogFoodFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <Spinner
                android:id="@+id/spinnerKategori"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#2D2D2D"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:spinnerMode="dropdown"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <!-- SearchBox -->
        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchview"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginTop="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/searchbox"
            app:layout_constraintTop_toBottomOf="@id/spinnerKategori"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <!-- Tab All dan My Meals -->
        <LinearLayout
            android:id="@+id/categoryTabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/searchview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- Tab All -->
            <LinearLayout
                android:id="@+id/tabAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="6dp">

                <TextView
                    android:id="@+id/tvAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="All"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Garis bawah aktif -->
                <View
                    android:id="@+id/indicatorAll"
                    android:layout_width="55dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="9dp"
                    android:background="#0F9E99" /> <!-- aktif -->
            </LinearLayout>

            <!-- Tab My Meals -->
            <LinearLayout
                android:id="@+id/tabMyMeals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="6dp">

                <TextView
                    android:id="@+id/tvMyMeals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="My Meals"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Garis bawah nonaktif -->
                <View
                    android:id="@+id/indicatorMyMeals"
                    android:layout_width="55dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="9dp"
                    android:background="#D3D3D3" /> <!-- abu-abu -->
            </LinearLayout>
        </LinearLayout>

        <!-- Dua tombol + Scan Barcode -->
        <LinearLayout
            android:id="@+id/topButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@drawable/bg_btn_meal"
            app:layout_constraintTop_toBottomOf="@+id/categoryTabs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- WRAPPER isi biar bisa dikecilin -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center">

                <!-- Baris 1: Scan A Meal & Create My Meal -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:weightSum="2">

                    <!-- Tombol Scan a Meal -->
                    <LinearLayout
                        android:id="@+id/btnScanMeal"
                        android:layout_width="140dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/btn_scanmeal"
                        android:gravity="center"
                        android:orientation="vertical">
                    </LinearLayout>

                    <!-- Tombol Create My Meal -->
                    <LinearLayout
                        android:id="@+id/btnCreateMeal"
                        android:layout_width="137dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/btn_createmeal"
                        android:gravity="center"
                        android:orientation="vertical">
                    </LinearLayout>
                </LinearLayout>


                <!-- Baris 2: Tombol Scan a Barcode -->
                <LinearLayout
                    android:id="@+id/btnScanBarcode"
                    android:layout_width="300dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/outline_qr">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/baseline_qr_code_scanner_24"
                        app:tint="#0F9E99"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scan a Barcode"
                        android:textColor="#0F9E99"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="48dp"
            app:layout_constraintTop_toBottomOf="@+id/topButtons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>