<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddFoodActivity">

    <Spinner
        android:id="@+id/spinnerKategori"
        android:layout_width="105dp"
        android:layout_height="33dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#2D2D2D"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/searchview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_back"
        android:clickable="true"
        android:contentDescription="Kembali"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- SearchBox -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchview"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/searchbox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.16"
        tools:layout_editor_absoluteX="0dp" />

    <!-- Tab All dan My Meals -->
    <LinearLayout
        android:id="@+id/categoryTabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerKategori">

        <!-- Tab All -->
        <LinearLayout
            android:id="@+id/tabAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="6dp">

            <TextView
                android:id="@+id/tvAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="All"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Garis bawah aktif -->
            <View
                android:id="@+id/indicatorAll"
                android:layout_width="55dp"
                android:layout_height="3dp"
                android:layout_marginTop="9dp"
                android:background="#0F9E99" /> <!-- aktif -->
        </LinearLayout>

        <!-- Tab My Meals -->
        <LinearLayout
            android:id="@+id/tabMyMeals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="6dp">

            <TextView
                android:id="@+id/tvMyMeals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="My Meals"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Garis bawah nonaktif -->
            <View
                android:id="@+id/indicatorMyMeals"
                android:layout_width="55dp"
                android:layout_height="3dp"
                android:layout_marginTop="9dp"
                android:background="#D3D3D3" /> <!-- abu-abu -->
        </LinearLayout>
    </LinearLayout>

    <!-- Dua tombol + Scan Barcode -->
    <LinearLayout
        android:id="@+id/topButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/bg_btn_meal"
        app:layout_constraintTop_toBottomOf="@+id/categoryTabs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- WRAPPER isi biar bisa dikecilin -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <!-- Baris 1: Scan A Meal & Create My Meal -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:weightSum="2">

                <!-- Tombol Scan a Meal -->
                <LinearLayout
                    android:id="@+id/btnScanMeal"
                    android:layout_width="140dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/ripple_green_rounded"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_camera"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="Scan\nA Meal"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- Tombol Create My Meal -->
                <LinearLayout
                    android:id="@+id/btnCreateMeal"
                    android:layout_width="140dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/ripple_green_rounded"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="26dp"
                        android:src="@drawable/outline_add_circle_"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="Create\nMy Meal"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Baris 2: Tombol Scan a Barcode -->
            <LinearLayout
                android:id="@+id/btnScanBarcode"
                android:layout_width="300dp"
                android:layout_height="32dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/outline_qr">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_qr_code_scanner_24"
                    app:tint="#0F9E99"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan a Barcode"
                    android:textColor="#0F9E99"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

<!-- bottom button -->
    <!-- Filter -->
    <LinearLayout
        android:id="@+id/bottomSection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/topButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    <!-- Judul History -->
    <TextView
        android:id="@+id/tvHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="History"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Item History -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="2dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/stroke_menu">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nasi Putih\n150 cal, 100.0 gram"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/btnAdd1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@null"
            android:src="@drawable/btn_plus"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:contentDescription="Tambah item"
            android:padding="0dp"
            android:backgroundTint="@android:color/transparent"
            android:foreground="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:paddingVertical="2dp"
        android:background="@drawable/stroke_menu">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Egg\n72 cal, 1.0 large"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/btnAdd2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@null"
            android:src="@drawable/btn_plus"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription="Tambah item"
            android:padding="0dp" />
    </LinearLayout>

    <!-- Judul Suggestions -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:text="Suggestions"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Item Suggestions (termasuk Ingredients) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp"
        android:paddingVertical="2dp"
        android:background="@drawable/stroke_menu">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tempe Goreng\n225 cal, 100.0 gram"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/btnAdd3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@null"
            android:src="@drawable/btn_plus"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:contentDescription="Tambah item"
            android:padding="0dp"
            android:backgroundTint="@android:color/transparent"
            android:foreground="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp"
        android:paddingVertical="2dp"
        android:background="@drawable/stroke_menu">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ayam Panggang\n250 cal, 120.0 gram"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/btnAdd4"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@null"
            android:src="@drawable/btn_plus"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:contentDescription="Tambah item"
            android:padding="0dp"
            android:backgroundTint="@android:color/transparent"
            android:foreground="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp"
        android:paddingVertical="2dp"
        android:background="@drawable/stroke_menu">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tahu Rebus\n80 cal, 100.0 gram"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/btnAdd5"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@null"
            android:src="@drawable/btn_plus"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:contentDescription="Tambah item"
            android:padding="0dp"
            android:backgroundTint="@android:color/transparent"
            android:foreground="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp"
        android:paddingVertical="2dp"
        android:background="@drawable/stroke_menu">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sayur Bayam\n45 cal, 120.0 gram"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/btnAdd6"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@null"
            android:src="@drawable/btn_plus"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:contentDescription="Tambah item"
            android:padding="0dp"
            android:backgroundTint="@android:color/transparent"
            android:foreground="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp"
        android:paddingVertical="2dp"
        android:background="@drawable/stroke_menu">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ikan Goreng\n310 cal, 130.0 gram"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/btnAdd7"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@null"
            android:src="@drawable/btn_plus"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:contentDescription="Tambah item"
            android:padding="0dp"
            android:backgroundTint="@android:color/transparent"
            android:foreground="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="2dp"
        android:background="@drawable/stroke_menu">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sambal Terasi\n90 cal, 20.0 gram"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/btnAdd8"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@null"
            android:src="@drawable/btn_plus"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:contentDescription="Tambah item"
            android:padding="0dp"
            android:backgroundTint="@android:color/transparent"
            android:foreground="@null" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="2dp"
            android:background="@drawable/stroke_menu">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kentang Rebus\n120 cal, 150.0 gram"
                android:textSize="13sp" />

            <ImageButton
                android:id="@+id/btnAdd9"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@null"
                android:src="@drawable/btn_plus"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:contentDescription="Tambah item"
                android:padding="0dp"
                android:backgroundTint="@android:color/transparent"
                android:foreground="@null" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>