<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image Placeholder -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <ImageView
                android:id="@+id/mealImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#EEEEEE"
                android:scaleType="centerCrop" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/uploadImageBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Upload Foto"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:cornerRadius="20dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:backgroundTint="#00897B"
                app:icon="@drawable/baseline_camera_alt_24"
                app:iconTint="@android:color/white" />
        </FrameLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Meal Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Nama Makanan"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMealName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2C3E50"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Calories -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Kalori"
                android:layout_marginTop="16dp"
                app:prefixText="ðŸ”¥"
                app:prefixTextColor="#777"
                app:suffixText="kcal"
                app:suffixTextColor="#777">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCalories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="#2C3E50"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Nutrition Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <!-- Protein -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="Protein"
                    android:layout_marginEnd="6dp"
                    app:suffixText="g"
                    app:suffixTextColor="#777">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etProtein"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="16sp"
                        android:textColor="#2C3E50" />
                </com.google.android.material.textfield.TextInputLayout>


                <!-- Carbs -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="Karbo"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    app:suffixText="g"
                    app:suffixTextColor="#777">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCarbs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="16sp"
                        android:textColor="#2C3E50" />
                </com.google.android.material.textfield.TextInputLayout>


                <!-- Fat -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="Lemak"
                    android:layout_marginStart="6dp"
                    app:suffixText="g"
                    app:suffixTextColor="#777">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="16sp"
                        android:textColor="#2C3E50" />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <!-- Ingredients -->
            <!-- Ingredients Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bahan-bahan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginTop="20dp"/>

            <!-- Search box -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ingredientSearchLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Cari bahanâ€¦"
                android:layout_marginTop="8dp">

                <AutoCompleteTextView
                    android:id="@+id/ingredientSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textColor="#2C3E50"
                    android:textSize="14sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Dynamic Chips -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:singleLine="false"
                app:chipSpacing="8dp"/>


            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveMeal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan"
                android:layout_marginTop="24dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                android:padding="14dp"
                android:backgroundTint="#00897B" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
